<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Home Team!" />

    <!--Parent controls for the overall scope of the viewport.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--This is the text that appears on the form up top-->
        <EditText
            android:id="@+id/manualEntry"
            android:layout_weight="2"
            android:hint="Update Total Clicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--This is the physical button. The 'click me' button.-->
        <Button
            android:layout_weight="1"
            android:id="@+id/manualUpdate"
            android:text="Click me"
            android:layout_width="0sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--This is the main clickable button -->
    <Button
        android:id="@+id/clickMe"
        android:text="Click me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Button A-->
        <Button
            android:id="@+id/aButton"
            android:text="A"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--Button B-->
        <Button
            android:id="@+id/bButton"
            android:text="B"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--Button C-->
        <Button
            android:id="@+id/cButton"
            android:text="C"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Visual text counter for main click function-->
    <TextView
        android:id="@+id/clicks"
        android:text="Clicks: 0"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Visual text counter for A-->
    <TextView
        android:id="@+id/aText"
        android:text="A clicks: 0"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Visual text counter for B-->
    <TextView
        android:id="@+id/bText"
        android:text="B clicks: 0"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Visual text counter for C-->
    <TextView
        android:id="@+id/cText"
        android:text="C clicks: 0"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>



